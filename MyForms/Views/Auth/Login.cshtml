@model LoginDto
@inject IStringLocalizer<SharedResource> SharedLocalizer
<form method="post">
    <div class="card col-md-8 mx-auto mt-4">
        <div class="card-header bg-success bg-gradient">
            <div class="text-center">
                <h2 class="text-white">@SharedLocalizer["LoginTitle"]</h2>
            </div>
        </div>
        <div class="card-body">
            <div class="col-md-10 mx-auto">
                <div class="my-3  text-danger" asp-validation-summary="ModelOnly"></div>
                @if(TempData["Error"]!=null){
                    <div>
                        <div class="alert alert-danger " role="alert">                            
                            <div>
                                @TempData["Error"]
                            </div>
                        </div>
                    </div>
                }
                <div class="form-floating my-3">
                    <input asp-for="Email" class="form-control border-secondary-subtle shadow" placeholder="" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating my-3 ">
                    <input asp-for="Password" class="form-control border-secondary-subtle shadow" placeholder="" />
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-check my-3 ">
                    <input asp-for="IsRemeber" class="form-check-input border-secondary-subtle shadow" placeholder="" />
                    <label asp-for="IsRemeber"></label>
                </div>
                <div class="col-md-3 my-3 mx-auto">
                    <input type="submit" value="@SharedLocalizer["Login"]" class="btn btn-primary w-100" />
                </div>
            </div>          
        </div>
    </div>
</form>