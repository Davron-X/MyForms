@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Oops! Something went wrong.</h1>

<p>We're sorry, but an unexpected error occurred.</p>

@if (ViewBag.ExceptionMessage != null)
{
    <div class="alert alert-danger">
        <strong>Message:</strong> @ViewBag.ExceptionMessage
        <br />
        <strong>Path:</strong> @ViewBag.ExceptionPath
        <br />
        <pre>@ViewBag.StackTrace</pre>
    </div>
}
