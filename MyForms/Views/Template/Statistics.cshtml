@model IEnumerable<QuestionStatisticsVM>
<div class="card col-md-8 mx-auto">
    <div class="card-header text-center">
        <h2 class="text-primary">Statistics</h2>
    </div>
    <div class="card-body">
        @foreach (var question in Model)
        {
            <div>
                <h5>@question.QuestionText</h5>
                @if (question.Type == QuestionType.Numeric)
                {
                    <p>Average Value: @question.AverageValue</p>
                }
                else
                {
                    <p>Most Frequent answer: @question.MostFrequentAnswer, Frequency: @question.Frequency</p>
                    <p>Other answers</p>
                    <ul>
                        @foreach (var item in question.OptionFrequencies)
                        {
                            <li>@item.Key - @item.Value</li>
                        }
                    </ul>
                }
                <hr />
            </div>
        }
    </div>
</div>
