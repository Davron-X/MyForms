@model IEnumerable<Template>
<div class="p-4">
    <div class="row">
        <div class="col-md-3 offset-md-9 text-end">
            <a class="btn btn-primary w-75" asp-action="Create" asp-controller="Template">Create new</a>
        </div>
    </div>
@if(Model!=null&&Model.Count()>0){    
        <div class="row">
            <h1 class="text-primary">Templates List</h1>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Topic
                    </th>
                    <th>
                        Is Private
                    </th>
                    <th>
                        Data Created 
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var template in Model)
                {
                    <tr class="clickable-row" data-href="@Url.Action("Details", "Template", new { templateId =template.Id})">
                        <td>@template.Title</td>
                        <td>@template.Topic?.Name</td>
                        <td>@template.IsPrivate</td>
                        <td>@template.CreatedAt</td>
                    </tr>
                }
            </tbody>
        </table>
}
else{
    <h1 class="text-primary">No templates</h1>
}
</div>
<script>
    const rows=document.querySelectorAll(".clickable-row");
    rows.forEach(row=>{
        row.style.cursor="pointer";
        row.addEventListener("click",()=>{
            window.location=row.dataset.href;
        });
    });
</script>
